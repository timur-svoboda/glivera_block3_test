.sidebar
	.sidebar_search
		.search
			.search_button
				+icon_button("search")
			input.search_input(type="search", placeholder="Search blog")
	.sidebar_link_block
		+link_block(sidebar_data.announcements)
	.sidebar_link_block
		+link_block(sidebar_data.popular_posts)
	.sidebar_poster
		.poster
			a.poster_link(href="#")
				+picture({ img: sidebar_data.poster.img, img_class: 'poster_img' })
	.sidebar_tag_cloud
		.tag_cloud
			h4.tag_cloud_title= sidebar_data.tag_cloud.title
			ul.tag_cloud_list
				each tag in sidebar_data.tag_cloud.list
					li.tag_cloud_item
						a.tag_cloud_link(href="#")= tag